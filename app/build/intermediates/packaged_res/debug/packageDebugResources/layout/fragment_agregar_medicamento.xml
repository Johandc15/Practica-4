<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.medicamentos.AgregarMedicamentoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloAgregarMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar medicamento"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- SECCIÓN: Datos básicos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del medicamento"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre comercial *"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/etNombreGenerico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre genérico (opcional)"
            android:inputType="textCapWords"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spPresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spViaAdministracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- SECCIÓN: Posología -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posología"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDosisPorToma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cantidad por toma *"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/spUnidadDosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCantidadTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Cantidad total del tratamiento *"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spUnidadCantidadTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- SECCIÓN: Ciclos de toma -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciclos de toma (por día)"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spTomasPorDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbManana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mañana" />

            <CheckBox
                android:id="@+id/cbMediodia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mediodía"
                android:layout_marginStart="8dp" />

            <CheckBox
                android:id="@+id/cbTarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarde"
                android:layout_marginStart="8dp" />

            <CheckBox
                android:id="@+id/cbNoche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noche"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- SECCIÓN: Duración -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración del tratamiento"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de inicio (dd/mm/aaaa) *"
            android:inputType="date" />

        <EditText
            android:id="@+id/etFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de terminación (dd/mm/aaaa)"
            android:inputType="date"
            android:layout_marginTop="8dp" />

        <CheckBox
            android:id="@+id/cbUsoCronico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uso crónico (sin fecha de terminación)"
            android:layout_marginTop="4dp" />

        <!-- SECCIÓN: Notas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas / indicaciones"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Tomar después de comer, evitar alcohol..."
            android:inputType="textMultiLine"
            android:minLines="2" />

        <!-- BOTÓN GUARDAR -->
        <Button
            android:id="@+id/btnGuardarMedicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar medicamento"
            android:layout_marginTop="24dp"
            android:background="@drawable/boton_ovalado2"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
