<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutEstadisticasPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etCorreoPacienteEstadistica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo del paciente"
                android:textColor="@color/dark_purple"
                android:textColorHint="@color/dark_purple"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBuscarEstadistica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_ovalado2"
            android:text="Buscar"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="414dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="296dp"
            android:layout_height="306dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/busqueda" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón Volver abajo y centrado -->
    <Button
        android:id="@+id/btnVolverEstadisticasPaciente"
        android:text="← Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/purple_200"
        android:textColor="@android:color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
