<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <!-- Contenedor general -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <TextView
            android:id="@+id/tvTituloPacientesAsociados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pacientes asociados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Descripción corta -->
        <TextView
            android:id="@+id/tvSubtituloPacientesAsociados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona el paciente al que le vas a programar medicamentos o recordatorios."
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Línea divisoria sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Aquí se agregan dinámicamente los pacientes asociados -->
        <LinearLayout
            android:id="@+id/layoutListaPacientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
</ScrollView>
