<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarmRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tvTituloAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de tomar el medicamento"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        />

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor toma tu dosis ahora."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="32dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnTomarAhora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_done"
            android:text="Tomar ahora"
            android:textAllCaps="false"
            android:padding="16dp"
            />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPosponer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_snooze"
            android:text="Posponer 10 min"
            android:textAllCaps="false"
            android:padding="16dp"
            />
    </LinearLayout>

</LinearLayout>
