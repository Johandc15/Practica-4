<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.MainActivity">

    <!-- Tarjeta central -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_border"
            android:clipToPadding="false">

            <!-- Panel inferior (ahora sí dentro del ConstraintLayout) -->
            <View
                android:id="@+id/bottomPanel"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/bg_bottom_panel"
                android:alpha="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Inicio de la cadena vertical 'packed' -->
            <FrameLayout
                android:id="@+id/logoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_logo_glow"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textViewEslogan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="36dp">

                <ImageView
                    android:id="@+id/imageViewLogo"
                    android:layout_width="289dp"
                    android:layout_height="228dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logo1" />
            </FrameLayout>

            <!-- Eslogan -->
            <TextView
                android:id="@+id/textViewEslogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu salud, siempre a tiempo"
                android:textSize="20sp"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/logoContainer"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Separador sutil -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@color/silver"
                app:layout_constraintTop_toBottomOf="@id/textViewEslogan"
                app:layout_constraintBottom_toTopOf="@id/btnIniciarSesion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botón Iniciar Sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarSesion"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Iniciar Sesión"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_login"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:foreground="@drawable/ripple_purple"
                android:background="@drawable/boton_ovalado"
                android:layout_marginTop="24dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintBottom_toTopOf="@id/btnRegistrarse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botón Registrarse -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarse"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_person_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:background="@drawable/boton_ovalado"
                android:foreground="@drawable/ripple_purple"
                android:layout_marginTop="20dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintTop_toBottomOf="@id/btnIniciarSesion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Fin de la cadena -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
