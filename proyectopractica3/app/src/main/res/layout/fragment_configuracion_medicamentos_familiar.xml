<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/scrollConfigMedicFamiliar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor general de la pantalla -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloConfiguracionMedFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicamentos del paciente"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="4dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcionConfiguracionMedFamiliar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aquí puedes revisar los medicamentos asociados al paciente, ver su tratamiento y eliminarlos si ya no aplican."
                android:textSize="14sp"
                android:textColor="#616161"
                android:paddingBottom="12dp" />

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp" />

            <!-- CONTENEDOR DONDE EL FRAGMENT AGREGA LAS TARJETAS -->
            <LinearLayout
                android:id="@+id/layoutConfiguracionMedicamentosFamiliar"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Aquí se agregan dinámicamente las tarjetas de medicamentos -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
